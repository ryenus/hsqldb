<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
  <alias name="jaasSetup" alias="setupBean"/>

  <bean id="jaasSetup" class="org.hsqldb.auth.AuthBeanMultiplexer"
        factory-method="getSingleton">
    <property name="authFunctionBeans"><map>
        <entry key="AUTHSAMPLEDBNAME">
          <list>
            <bean class="org.hsqldb.auth.JaasAuthBean" init-method="init">
              <property name="applicationKey" value="demo"/>
              <property name="roleSchemaValuePatternString" value="RS:(.+)"/>
              <property name="roleSchemaViaCredential" value="true"/>
            </bean>
          </list>
        </entry>
    </map></property>
  </bean>
</beans>
