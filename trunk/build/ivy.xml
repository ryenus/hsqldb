<ivy-module version="2.0">
  <!-- $Id$ -->
  <info organisation="hsqldb" module="docbook"/>
  <configurations defaultconf="msv">
    <!-- Want to have 'msv' and 'xalan' extend this, but don't yet have
         Gradle honoring the 'extends' attribute, so giving verbose conf
         specifications below instead.  (Similarly want 'admc-rs-msv-deps'
         to extend 'msv')  -->
    <conf name="admc-rs-msv-jar" visibility="private" transitive="false"
       description="Single Catalog-Resolving Schematron-Capable MSV jar file"/>
    <conf name="admc-rs-msv-deps" visibility="private" transitive="false"
       description="Dependecies of admc-rs-msv Jar file"/>
    <conf name="msv" description="Sun MSV" transitive="false"
          visibility="private"/>
    <conf name="xalan" description="Xalan Xslt" transitive="false"
          visibility="private"/>
    <conf name="fop" description="FOP" transitive="false" visibility="private"/>
    <conf name="bnd-jar" visibility="private" transitive="false"
          description="aQute Bundle Tool Library jar file"/>
    <conf name="jflex-jar" visibility="private" transitive="false"
          description="JFlex Library jar file"/>
  </configurations>
  <dependencies defaultconfmapping="*->default">
    <!-- Contray to standard Java policy, Sun has apparently obsoleted the
         relames jar and shows no concern for their users by not providing
         an archived version of it anywhere.
         Not only is it not available in Maven... it's not available in any
         public repository that I know of.
         When I, or somebody else, has a lot of free time, the dependency of
         admc-rs-msv upon relames should be identified, an alternative provider
         of the functionality found, and the dependency eliminated.
    -->
    <dependency name="relames" rev="20060319" conf="msv; admc-rs-msv-deps"/>
    <dependency name="msv" rev="20050913" conf="msv; admc-rs-msv-deps"/>
    <dependency name="relaxngDatatype" rev="20050913"
                conf="msv; admc-rs-msv-deps"/>
    <dependency name="xsdlib" rev="20060615" conf="msv; admc-rs-msv-deps"/>
    <dependency name="isorelax" rev="20050913" conf="msv; admc-rs-msv-deps"/>
    <dependency name="fop" rev="1.0" conf="fop"/>
    <!-- Need?:
    <dependency name="fop-hyph" rev="1.2" conf="fop"/>
    <dependency name="jai_codec" rev="1.1.3" conf="fop"/>
    <dependency name="jai_core" rev="1.1.3" conf="fop"/>
    -->
    <dependency name="xmlgraphics-commons" rev="1.4" conf="fop"/>
    <!--
    <dependency name="avalon-framework" rev="4.2.0" conf="fop"/>
    -->
    <dependency name="avalon-framework-api" rev="4.3.1" conf="fop"/>
    <dependency name="avalon-framework-impl" rev="4.3.1" conf="fop"/>
    <dependency name="batik-svg-dom" rev="1.7" conf="fop"/>
    <dependency name="batik-bridge" rev="1.7" conf="fop"/>
    <dependency name="batik-util" rev="1.7" conf="fop"/>
    <dependency name="batik-dom" rev="1.7" conf="fop"/>
    <dependency name="batik-css" rev="1.7" conf="fop"/>
    <dependency name="batik-awt-util" rev="1.7" conf="fop"/>
    <dependency name="batik-gvt" rev="1.7" conf="fop"/>
    <dependency name="batik-transcoder" rev="1.7" conf="fop"/>
    <dependency name="batik-extension" rev="1.7" conf="fop"/>
    <dependency name="batik-ext" rev="1.7" conf="fop; admc-rs-msv-deps"/>
    <dependency name="commons-io" rev="2.1" conf="fop"/>
    <dependency name="commons-logging" rev="1.1.1" conf="fop"/>
    <dependency name="xalan" rev="2.7.1" conf="xalan; msv; admc-rs-msv-deps"/>
    <dependency name="serializer" rev="2.7.1" conf="xalan"/>
    <!-- ?
    <dependency name="docbook-ext-xalan2" rev="1.73.2" conf="xalan"/>
    -->
    <dependency name="docbook-xsl-xalan" rev="1.0.0" conf="xalan"/>
    <dependency name="xml-apis" rev="2.0.2" conf="xalan; msv; admc-rs-msv-deps"/>
    <dependency name="xercesImpl" rev="2.10.0"
                conf="msv; xalan; admc-rs-msv-deps"/>
              <!--  Perhaps resolver would be better: ?  -->
    <dependency name="xml-resolver" rev="1.2" conf="msv; admc-rs-msv-deps"/>
    <!-- amdc-rs-msv is not available in Maven repository yet -->
    <dependency name="admc-rs-msv" rev="1.0" conf="admc-rs-msv-jar; xalan"/>
    <!-- Primary purpose of this jar is for the MSV validator.
         It is also added to the XSLT CLASSPATH only to add the XInclude
         settings file to the CLASSPATH.  Needed by Xalan during XSLT.
    -->
    <dependency name="bnd" rev="0.0.384" conf="bnd-jar"/>
    <dependency name="jflex" rev="1.4.3" conf="jflex-jar"/>
  </dependencies>
</ivy-module>
